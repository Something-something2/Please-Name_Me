<html>

<body>
  {{#if loggedIn}}

<form id="edit-user-form" class="container mt-5 user-profile edit-user-form">

        <div class="container text-center">
            <div class="row mt-3">
                <div class="form-group col text-center">
                    <!-- <label for="inputEmail4">Email:</label> -->
                    <input type="email" class="form-control text-center" id="email" value="{{user.email}}" placeholder="Email">
                </div>
            </div>
            <div class="row mt-3">
                <div class="form-group col text-center">
                    <!-- <label for="inputPassword4">Password:</label> -->
                    <input type="password" class="form-control text-center" id="password" value="{{user.password}}"
                        placeholder="Password">
                </div>
            </div>
        </div>


    <div class="form-row mt-3">

        <div class="col-sm-12 text-center mt-3">
            <button type="submit" class="btn btn-primary" id="update-btn">Update Profile</button>
        </div>

    </div>

</form>
{{else}}
  <h1 href="/login">Unable to edit information, You are not logged in</h1>
  
  {{/if}}
<script src="/javascript/edit-user.js"></script>

</body>
</html>