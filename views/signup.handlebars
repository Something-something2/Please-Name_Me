<form class="container mt-5 signup-form">

    <div class="form-row mt-3">
        <div class="form-group col-md-6">
            <!-- <label for="inputEmail4">Email:</label> -->
            <input type="email" class="form-control" id="inputEmail" placeholder="Email">
        </div>
        <div class="form-group col-md-6">
            <!-- <label for="inputPassword4">Password:</label> -->
            <input type="password" class="form-control" id="inputPassword" placeholder="Password">
        </div>
    </div>

    <div class="form-row mt-3">

        <div class="form-group col-md-6">
            <label for="inputGender">Gender:</label>
            <select id="inputGender" class="form-control">
                <option selected>Choose...</option>
                <option>Male</option>
                <option>Female</option>
                <!-- <option>I prefer not to say</option> -->
            </select>
        </div>

        <div class="form-group col-md-6">
            <label for="inputBirthday">Date of Birth (mm/dd/yyyy):</label>
            <input type="date" class="form-control" id="inputBirthday" placeholder="mm/dd/yyyy">
        </div>

    </div>

    <div class="form-row mt-3">

        <div class="form-group">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="gridCheck">
                <label class="form-check-label" for="gridCheck">
                    Check here that you agree to our <a href="privacy-policy.html" target="_blank" id="privacy-policy"
                        class="font-italic">privacy policy</a>
                </label>
            </div>
        </div>

        <div class="col-sm-12 text-right mt-3">
            <button type="submit" class="btn btn-primary">Sign Up</button>
        </div>

    </div>

</form>

<script src="../javascript/signup.js"></script>